<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="authorName">
        <createTable tableName="flat">
            <column name="flat_id" type="serial">
                <constraints primaryKey="true"/>
            </column>
            <column name="description" type="VARCHAR(520)">
                <constraints nullable="false"/>
            </column>
            <column name="house_location" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="address" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="rooms_amount" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="time_built" type="TIMESTAMP"/>
        </createTable>
    </changeSet>
</databaseChangeLog>